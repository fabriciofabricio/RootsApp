rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Helper to get user data
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    // Users Collection
    match /users/{userId} {
      allow read: if request.auth != null && (
        request.auth.uid == userId || 
        isAdmin() || 
        resource.data.workspaceId == getUserData().workspaceId
      );
      allow write: if request.auth != null && (request.auth.uid == userId || isAdmin());

      // Notifications Subcollection
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Posts Collection (The Pulse)
    match /posts/{postId} {
      // Allow read if user is in the same workspace as the post
      allow read: if request.auth != null && (
        resource.data.workspaceId == getUserData().workspaceId
      );

      // Allow create if user assigns their own valid workspaceId
      allow create: if request.auth != null && (
        request.resource.data.workspaceId == getUserData().workspaceId &&
        request.resource.data.authorId == request.auth.uid
      );

      // Allow update/delete if user is the author or admin (in same workspace)
      allow update, delete: if request.auth != null && (
        resource.data.authorId == request.auth.uid || 
        (isAdmin() && resource.data.workspaceId == getUserData().workspaceId)
      );

      // Comments Subcollection
      match /comments/{commentId} {
        allow read: if request.auth != null && (
           get(/databases/$(database)/documents/posts/$(postId)).data.workspaceId == getUserData().workspaceId
        );
        allow create: if request.auth != null && (
           get(/databases/$(database)/documents/posts/$(postId)).data.workspaceId == getUserData().workspaceId &&
           request.resource.data.authorId == request.auth.uid
        );
        allow delete: if request.auth != null && (
           resource.data.authorId == request.auth.uid || isAdmin()
        );
      }
    }

    // Moments Collection
    match /moments/{momentId} {
      // Allow read if user is in the same workspace (or just authenticated for now if workspace is optional)
      allow read: if request.auth != null; 
      
      // Allow create if user is authenticated
      allow create: if request.auth != null && request.resource.data.authorId == request.auth.uid;

      // Allow delete if author or admin
      allow delete: if request.auth != null && (
        resource.data.authorId == request.auth.uid || isAdmin()
      );
    }

    // Shopping List Collection
    match /shopping_list/{itemId} {
      allow read, write: if request.auth != null;
    }

    // Shopping Logs Collection
    match /shopping_logs/{logId} {
      allow read, write: if request.auth != null;
    }
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
